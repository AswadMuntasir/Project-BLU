    <div class="container">

      <!-- CONTENT -->
	<div class="row">
		<div class="col-sm-12 col-lg-12">
			<h4><strong>Bookings</strong></h4>
			  <table class="display">
	          <thead>
              <form method="get">
	            <tr>
	              <th>Hotel Name</th>
                <th>Hotel Address</th>
                <th>Status</th>
	              <th>Check IN</th>
	              <th>Check Out</th>
	              <th>Paid</th>
	              <th>Due</th>
                <th>Status</th>
                <th>Cancel</th>
	            </tr>
	          </thead>
	          <tbody>
              <% for(var i=0; i < bookingDetails.length; i++){ %>
	            <tr class="odd">
	              <td><%= bookingDetails[i].hName %></td>
	              <td><%= bookingDetails[i].hAddress %></td>
                <td><%= bookingDetails[i].roomType %></td>
	              <td><%= bookingDetails[i].checkin %></td>
	              <td><%= bookingDetails[i].checkout %></td>
	              <td><%= bookingDetails[i].paid %></td>
                <td><%= bookingDetails[i].due %></td>
                <td><%= bookingDetails[i].status %></td>
                <input hidden="hidden" type="number" name="bookingID" value="<%= bookingDetails[i].id %>" >
                <td> <a class="btn btn-info" href="/userProfile/tables/<%= bookingDetails[i].id %>" type="submit">Cancel</a></td>
	            </tr>
            </form>
              <% } %>
	          </tbody>
	         </table><!--/END First Table -->
